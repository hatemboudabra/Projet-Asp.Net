@model BibliothequeVieuxMontreal.Models.Pret

@{
    ViewData["Title"] = "Edit";
}

<h4>Modifier un prêt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="IdLivre" class="control-label"></label>
                <select asp-for="IdLivre" class="form-control" asp-items="ViewBag.IdLivre"></select>
                <span asp-validation-for="IdLivre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMembre" class="control-label"></label>
                <select asp-for="IdMembre" class="form-control" asp-items="ViewBag.IdMembre"></select>
                <span asp-validation-for="IdMembre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateDebut" class="control-label"></label>
                <input asp-for="DateDebut" class="form-control" />
                <span asp-validation-for="DateDebut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFin" class="control-label"></label>
                <input asp-for="DateFin" class="form-control" />
                <span asp-validation-for="DateFin" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Enregistrer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index"><i class="fa fa-arrow-left" aria-hidden="true"></i> Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
