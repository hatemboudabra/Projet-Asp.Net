@model IEnumerable<BibliothequeVieuxMontreal.Models.Livre>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste de livres</h1>

<p>
    <a asp-action="Create" class="btn btn-success">
        <i class="fa fa-plus-circle" aria-hidden="true"></i>
        Créer un nouveau livre
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Auteur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pages)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cetegorie)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Auteur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pages)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cetegorie)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">
                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                    Éditer
                </a> 
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">
                    <i class="fa fa-list" aria-hidden="true"></i>
                    Details
                </a> 
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                    Supprimer
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
