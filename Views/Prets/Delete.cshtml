@model BibliothequeVieuxMontreal.Models.Pret

@{
    ViewData["Title"] = "Delete";
}
@if (ViewBag.message == null)
{
    <h3>Êtes vous sûr ?</h3>
    <div>
        <h4>Supprimer prêt</h4>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateDebut)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateDebut)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DateFin)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DateFin)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.IdLivreNavigation)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.IdLivreNavigation.Auteur)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.IdMembreNavigation)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.IdMembreNavigation.Nom)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Confirmer" class="btn btn-danger" /> 
            <a asp-action="Index" class="btn btn-primary">Retour à la liste</a>
        </form>
    </div>
} else {
    <div class="alert alert-@ViewBag.typeMessage" role="alert">
    <h5>
        @ViewBag.message
    </h5>
    </div>
    <br /><br />
    @if (Convert.ToString(@ViewBag.typeMessage) == "danger") { 
        <div class="text-center">
            <a href="/Retards/Index/@ViewBag.pret.IdMembre" class="btn btn-warning">
                Voir la liste des retard de ce membre
                <i class="fa fa-th-list" aria-hidden="true"></i>&nbsp;
            </a>
        </div>
    }
    <br /><br />
    <div>
        <a href="/prets" class="btn btn-info">
            <i class="fa fa-th-list" aria-hidden="true"></i>&nbsp;
            Liste des prêts
        </a>
    </div>
}